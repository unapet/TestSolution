@{
    ViewData["Title"] = "product detail " + Model.Title;
}
@model ProductModel


<div class="container">
    <h3 class="display-4">Product details</h3>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        @Model.Description
                    </p>
                </div>
            </div>
            <hr />
        </div>
    </div>

   
    <hr />
</div>

